{
	"manifest_version": 2,
	"name": "Orogo Task Reminder",
	"version": "0.1",
	"permissions": [
      "activeTab",
      "declarativeContent",
      "storage"
    ],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],

			"js": [
				"content.js"
			],

			"permissions": [
      			"activeTab",
        		"notifications"
    		]
		}
	],

  	"permissions": [
    	"contentSettings", "background"
  	], 
  	"browser_action": {
  		"default_popup": "popup.html"
  	}

}